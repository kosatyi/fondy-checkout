<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-uppercase">
                    <a href="javascript:void(0)" class="modal-title-close" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-remove"></i>
                    </a>
                    <i class="fa fa-lock"></i>
                    <%=_('OTP')%>
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" control="ui.form"
                      data-model="api.account"
                      data-action="otp"
                      data-callback="modal">
                    <input type="hidden" name="password">
                    <input type="hidden" name="email">
                    <input type="hidden" name="mfa">
                    <input type="hidden" name="mfa_token">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="tel" autofocus maxlength="6" name="otp" value=""
                                   class="form-control input-lg f-24 text-center bold">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-block btn-lg btn-success">
                                <%=_('Confirm')%>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>