<% if(view.attr('recurring')) { %>
<div class="form-group row">
    <div class="col-xs-12">
        <label class="checkbox">
            <input type="checkbox" name="recurring" value="true" control="ui.toggle.group"
                   data-class="hidden"
                   data-target="[data-form-recurring]">
            <i class="fa-calendar"></i>
            <%=_('Regular payment')%>
        </label>
    </div>
</div>
<div class="form-group-wrapper hidden" data-form-recurring="">
    <div class="form-group row has-feedback-left">
        <div class="col-sm-4">
            <label class="form-control-static"><%= _('Frequency') %>:</label>
        </div>
        <div class="col-sm-8">
            <input type="hidden" name="recurring_data[end_time]">
            <div class="relative" control="ui.recurring.period">
                <input type="hidden" name="recurring_data[every]">
                <input type="hidden" name="recurring_data[period]">
                <select class="form-control" required>
                    <option value="1,day"><%= _('every day') %></option>
                    <option value="1,week"><%= _('every week') %></option>
                    <option value="2,week"><%= _('every 2 weeks') %></option>
                    <option value="1,month"><%= _('every month') %></option>
                    <option value="2,month"><%= _('every 2 month') %></option>
                    <option value="3,month"><%= _('every quarter') %></option>
                </select>
                <i class="form-control-feedback fa fa-calendar-check-o"></i>
            </div>
        </div>
    </div>
    <div class="form-group row has-feedback-left">
        <div class="col-sm-4">
            <label class="form-control-static"><%= _('Amount') %>:</label>
        </div>
        <div class="col-sm-8">
            <div class="relative">
                <input type="number" min="1" step="0.01" pattern="^[0-9]+(\.[0-9]{2})?$" required name="recurring_data[amount]" class="form-control"
                       placeholder="0.00">
                <i class="form-control-feedback fa fa-money"></i>
            </div>
        </div>
    </div>
    <div class="form-group row has-feedback-left">
        <div class="col-sm-4">
            <label class="form-control-static"><%= _('Starting date') %>:</label>
        </div>
        <div class="col-sm-8">
            <div class="relative">
                <input name="recurring_data[start_time]" value="<%=params.attr('recurring_data.start_time')%>" required data-mask="0000-00-00"
                       class="form-control" type="text" placeholder="<%=_('YYYY-MM-DD')%>">
                <i class="form-control-feedback fa fa-calendar"></i>
            </div>
        </div>
    </div>
</div>
<% } %>